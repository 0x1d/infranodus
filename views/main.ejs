<script language="javascript">
    function toggleios() {
        var ele = document.getElementById("ioshelp");
        var text = document.getElementById("displayios");
        if(ele.style.display == "block") {
            ele.style.display = "none";
            text.innerHTML = "iPad/iPhone";
        }
        else {
            ele.style.display = "block";
            text.innerHTML = "hide iPad/iPhone";
        }
    }
